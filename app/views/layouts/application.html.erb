<!DOCTYPE html>
<html lang="en">
  <head>
    <title>One Voice</title>
    <meta name="description" content="Realtime live classroom feedback for instructors">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag('application.js') %>
  </head>

  <%# Main Nav Bar: %>
  <body>
    <% if current_user %>
      <div class="nav_main">

        <div class="nav_to_profile">
          <%= link_to 'Your User Profile (Replace this with Username)', root_url %>
        </div>

        <div class="nav_to_logout">
          <%= link_to "Logout", sessions_path, method: :delete %>
        </div>

      </div>
    <% end %>

    <%= yield %>

  </body>
</html>
