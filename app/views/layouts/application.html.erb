<!DOCTYPE html>
<html lang="en">
  <head>
    <title>One Voice</title>
    <meta name="description" content="Realtime live classroom feedback for instructors">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag('application.js') %>
  </head>

  <%# Main Nav Bar: %>
  <body>
    <% if current_user %>
      <div class="nav_main">

        <div class="nav_to_profile">
          <%= link_to "#{current_user.first_name} #{current_user.last_name}", user_path(current_user.id) %>
          <span class="nav_user_role"><%= " (#{current_user.role})" %></span>
        </div>

        <div class="nav_to_logout">
          <%= link_to "Logout", sessions_path, method: :delete %>
        </div>

      </div>
    <% end %>

    <%= yield %>

  </body>
</html>
