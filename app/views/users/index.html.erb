<h1>Welcome to OneVoice Community<h1>

<% if @user %>
  <h2>You are logged in</h2>
  <%= link_to 'Back to your profile', user_path(@user.id) %>
<% else %>
  <p>
    <%#= link_to 'Sign Up', new_user_path %>
    <%#= link_to 'Log In', new_sessions_path %>

    <button class="signin">Log In</button>

    <button class="signup">Sign Up</button>

    <div class="modal" id="sign_in">
      <%= link_to "Sign In", new_sessions_path %>
    </div>

    <div class="modal" id="sign_up">
      <%= link_to "Sign Up", new_user_path %>
    </div>

  </p>
<% end %>
