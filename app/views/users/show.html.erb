<div id="user-profile">

    <div class="user-info">

      <div class="profile_page_photo">
        <p>
          <%= image_tag(@user.user_image.url) %>
        </p>
      </div>

      <h3>Name: <%= @user.first_name %> <%= @user.last_name %></h3>

      <h3>Contact: <%= mail_to @user.email, "#{ @user.email }" %></h3>

      <h3>Role: <%= @user.role %></h3>

      <div class="edit_profile">
        <h3><%= link_to 'Edit Your Profile', '#' %></h3>
      </div>

      <h3><%= link_to 'Delete Your Account', user_path, method: :delete %></h3>
    </div>

    <% if @user.role == 'student' %>

      <div class="user-nav">
        <h2>
          <%= link_to 'Show All Classrooms', user_class_rooms_path(@user.id) %>
        </h2>
      </div>

    <% elsif @user.role == 'instructor' %>

      <div class="user-nav">
        <h2>
          <%= link_to 'Create a Classroom', new_user_class_room_path(@user.id) %>
        </h2>
        <h2>
          <%= link_to 'See All Classrooms', user_class_rooms_path(@user.id) %>
        </h2>
      </div>

    <% end %>

    <div class="modal" id="edit_profile">
      <%= render "edit_form" %>
    </div>

</div>
